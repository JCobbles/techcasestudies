---
---

[
    {% for post in site.posts %}
    {
        "id"        :  {{ post.id | slugify }},
        "url"       :  {{ post.url | prepend: site.baseurl |jsonify}},
        "category"  :  {{ post.category | jsonify }},
        "authors"   :  {{ post.authors  | jsonify }},
        "title"     :  {{ post.title  | escape | jsonify }},
        "tags"      :  {{ post.tags | jsonify }},
        "excerpt"   :  {{ post.excerpt  | jsonify }},
        "module"    :  {{ post.module | jsonify }},
        "date"      :  {{ post.date | jsonify}},
        "shortdate" :  {{ post.date | date : '%B %d, %Y' | jsonify}},
        "image"     :  {{ post.image | prepend: site.url | jsonify}},
        "score"     :  {{ post.score | jsonify }},
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
]
