---
---
[
	{% for post in site.posts %}
		{
            "id"         : "{{ post.id | slugify}}",
            "title"      : "{{ post.title | escape | jsonify }}",
            "category"   : "{{ post.category | jsonify }}",
            "tags"       : "{{ post.tags | join: ', ' | jsonify }}",
            "url"        : "{{ post.url | jsonify }}",
            "path"       : "{{ post.path | jsonify }}",
            "next"       : "{{ post.next.url | jsonify }}",
            "previous"   : "{{ post.previous.url| jsonify  }}",
            "date"       : "{{ post.date | jsonify }}",
            "shortdate"  : "{{ post.date | date : '%B %d, %Y' | jsonify }}",
            "content"    : "{{ post.content | escape | strip_newlines | jsonify }}",
            "excerpt"    : "{{ post.excerpt | escape | strip_newlines | jsonify }}",
            "authors"    : "{{ post.authors | join: ', ' | jsonify }}",
            "image"      : "{{ post.image | jsonify }}"
            "score"      : "{{ post.score | jsonify }}"
		} {% if forloop.last %}{% else %}{% endif %}
	{% endfor %}
]
